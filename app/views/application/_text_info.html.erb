<!-- En-tête ultra-compact du texte -->
<div id="text-info" class="relative overflow-hidden bg-gradient-to-r from-white via-blue-50/50 to-indigo-50/30 backdrop-blur-sm border border-white/20 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 mb-6">
  
  <div class="p-4">
    <div class="flex gap-4 items-center">
      
      <!-- Mini couverture -->
      <div class="flex-shrink-0">
        <div class="relative w-12 h-16 transform transition-all duration-300 hover:scale-105">
          <div class="bg-white rounded-md shadow-md overflow-hidden border border-gray-200">
            <%= display_text_cover(@text, class: "w-full h-full object-cover") %>
          </div>
          <div class="absolute -top-1 -right-1 w-4 h-4 bg-green-500 rounded-full flex items-center justify-center">
            <svg class="w-2 h-2 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
      </div>
      
      <!-- Informations compactes -->
      <div class="flex-grow min-w-0">
        <!-- Titres compacts -->
        <div class="mb-2">
          <h1 class="text-lg font-bold text-gray-900 leading-tight text-tibetan truncate">
            <%= @text.title_tibetan %>
          </h1>
          <p class="text-sm text-indigo-600 font-medium truncate">
            <%= @text.title_phonetics %>
          </p>
        </div>

        <!-- Tags inline avec icônes -->
        <div class="flex flex-wrap items-center gap-2 text-xs">
          
          <!-- Déités avec icône -->
          <% if @text.respond_to?(:deities) && @text.deities.any? %>
            <div class="flex items-center gap-1">
              <div class="w-5 h-5 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.518 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.518-4.674z"></path>
                </svg>
              </div>
              <% @text.deities.limit(2).each do |deity| %>
                <span class="bg-purple-100 text-purple-700 px-2 py-0.5 rounded-full font-medium hover:scale-105 transition-transform">
                  <%= deity.name_tibetan.present? ? deity.name_tibetan : deity.name_english %>
                </span>
              <% end %>
              <% if @text.deities.count > 2 %>
                <span class="bg-gray-100 text-gray-600 px-2 py-0.5 rounded-full">+<%= @text.deities.count - 2 %></span>
              <% end %>
            </div>
          <% end %>

          <!-- Écoles avec icône -->
          <% if @text.respond_to?(:schools) && @text.schools.any? %>
            <div class="flex items-center gap-1">
              <div class="w-5 h-5 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"></path>
                </svg>
              </div>
              <% @text.schools.limit(2).each do |school| %>
                <span class="bg-blue-100 text-blue-700 px-2 py-0.5 rounded-full font-medium hover:scale-105 transition-transform">
                  <%= school.name %>
                </span>
              <% end %>
              <% if @text.schools.count > 2 %>
                <span class="bg-gray-100 text-gray-600 px-2 py-0.5 rounded-full">+<%= @text.schools.count - 2 %></span>
              <% end %>
            </div>
          <% end %>

          <!-- Tags avec icône -->
          <% if @text.respond_to?(:tags) && @text.tags.any? %>
            <div class="flex items-center gap-1">
              <div class="w-5 h-5 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <% @text.tags.limit(3).each do |tag| %>
                <span class="bg-emerald-100 text-emerald-700 px-2 py-0.5 rounded-full font-medium hover:scale-105 transition-transform">
                  #<%= tag.name %>
                </span>
              <% end %>
              <% if @text.tags.count > 3 %>
                <span class="bg-gray-100 text-gray-600 px-2 py-0.5 rounded-full">+<%= @text.tags.count - 3 %></span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Actions compactes -->
      <div class="flex-shrink-0 flex items-center gap-1">
        
        <%= link_to [:edit, @text], 
            class: "p-1.5 text-blue-600 hover:bg-blue-50 rounded-md transition-all duration-200 hover:scale-110",
            title: "Modifier" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% end %>
        
        <% if Current.user&.admin? %>
          <%= button_to @text, method: :delete, 
              form: { data: { turbo_confirm: "Supprimer ce texte ?" } },
              class: "p-1.5 text-red-600 hover:bg-red-50 rounded-md transition-all duration-200 hover:scale-110",
              title: "Supprimer" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Barre décorative ultra-fine -->
  <div class="h-0.5 bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400"></div>
</div>

<!-- Styles d'animation pour l'effet shimmer -->
<style>
  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }
  .animate-shimmer {
    animation: shimmer 3s ease-in-out infinite;
  }
</style>