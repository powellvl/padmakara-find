<div id="text-info" class="p-6 bg-white rounded-lg shadow-lg mt-5">
  <div class="flex gap-8">
    <%# Book Cover %>
    <div class="flex-shrink-0 w-[210mm] h-[297mm] max-w-[200px] max-h-[283px] relative">
      <%= display_text_cover(@text, class: "w-full h-full object-contain") %>
    </div>
    
    <%# Text Information %>
    <div class="flex-grow space-y-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-2"><%= @text.title_tibetan %></h2>
        <h2 class="text-2xl font-bold text-gray-800 mb-2"> <%= @text.title_phonetics %></h2>
        <h2 class="text-2xl font-bold text-gray-800 mb-2"> <%= @text.title_wylie %></h2>
      <% if @text.respond_to?(:deities) && @text.deities.any? %>
        <div>
          <h5 class="text-sm font-semibold text-gray-600 uppercase tracking-wider mb-2">Deities</h5>
          <ul class="grid grid-cols-2 gap-2">
            <% @text.deities.each do |deity| %>
              <li class="text-gray-700 bg-gray-50 rounded-md px-3 py-2">
                <%= deity.name_tibetan %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <% if @text.respond_to?(:schools) && @text.schools.any? %>
        <div>
          <h5 class="text-sm font-semibold text-gray-600 uppercase tracking-wider mb-2">Schools</h5>
          <div class="flex flex-wrap gap-2">
            <% @text.schools.each do |school| %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                <%= school.name %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @text.respond_to?(:tags) && @text.tags.any? %>
        <div>
          <h5 class="text-sm font-semibold text-gray-600 uppercase tracking-wider mb-2">Tags</h5>
          <div class="flex flex-wrap gap-2">
            <% @text.tags.each do |tag| %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                <%= tag.name %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
      <%= link_to 'Edit', [:edit, @text], class: "inline-flex items-center px-4 py-2 text-sm font-medium text-blue-700 bg-white border border-blue-700 rounded-lg hover:bg-blue-700 hover:text-white focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-white dark:bg-white-800 dark:text-blue-800 dark:border-blue-600 dark:hover:text-white dark:hover:bg-blue-700" %>
      <%= button_to 'Remove', @text, method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this text?" } }, class: "mt-2 inline-flex items-center px-4 py-2 text-sm font-medium text-red-700 bg-white border border-red-700 rounded-lg hover:bg-red-700 hover:text-white focus:z-10 focus:ring-2 focus:ring-red-700 focus:text-white" %>
    </div>
  </div>
</div>