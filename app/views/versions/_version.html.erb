<div id="<%= dom_id version %>" class="bg-white rounded-lg shadow-sm p-6 mb-6">
  <div class="text-2xl font-bold">
    <%= version.title %>
  </div>
  <div class="text-1xl semibold text-gray-500">
    <%= version.subtitle %>
  </div>
  <div class="text-1xl font-bold">
    <%= version.name %>
  </div>
  <div class="inline-block px-3 py-1 text-sm font-semibold <%= status_color_classes(version.status) %> rounded-full">
    <%= version.status.humanize %>
  </div>

  <% if version.files.any? %>
    <div class="mt-8">
      <div class="grid gap-4">
        <% version.files.each do |file| %>
          <div class="flex width-full items-center gap-1" data-controller="file-tags">
            <%= link_to file, class: "group flex-1 flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-all duration-200" do %>
              <div class="flex-shrink-0">
                <%= file_icon(file) %>
              </div>
              <div class="ml-4 flex-1">
                <p class="text-sm font-medium text-gray-900 group-hover:text-blue-600">
                  <%= file.filename %>
                  <% if file.primary? %>
                    <span class="ml-2 text-yellow-500" title="Primary file">â˜…</span>
                  <% end %>
                </p>
                <p class="text-xs text-gray-500 mb-1">
                  <%= number_to_human_size(file.byte_size) %>
                </p>
                
                <!-- Tags du fichier de version -->
                <%= render "shared/file_tags", file: file %>
              </div>
              <div class="ml-auto">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <p class="mt-4 text-sm text-gray-500 italic">No files attached</p>
  <% end %>
</div>
