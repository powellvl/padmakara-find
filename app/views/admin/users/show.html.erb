<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="max-w-4xl mx-auto py-6">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">User Details</h1>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="p-6">
      <div class="flex items-center">
        <div class="h-24 w-24 rounded-full bg-gray-200 flex items-center justify-center text-gray-500">
          <svg class="h-16 w-16" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
          </svg>
        </div>
        
        <div class="ml-6">
          <h2 class="text-xl font-semibold text-gray-800"><%= @user.email %></h2>
          <div class="mt-2">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
              <%= @user.role == 'admin' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
              <%= @user.role.capitalize %>
            </span>
          </div>
        </div>
      </div>
      
      <div class="mt-6 border-t border-gray-200 pt-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="flex items-center">
            <svg class="h-5 w-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span class="text-gray-700"><%= @user.email %></span>
          </div>
        </div>
      </div>
      
      <div class="mt-6 flex space-x-3">
        <%= link_to 'Edit', edit_admin_user_path(@user), class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500' %>
        <%= link_to 'Back', admin_users_path, class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      </div>
    </div>
  </div>
</div>
