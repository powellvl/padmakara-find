<p style="color: green"><%= notice %></p>

<% content_for :title, "Texts" %>

<h1 class="text-3xl font-bold p-10">Texts</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @texts.each do |text| %>
    <div id="<%= dom_id text %>" class="max-w-sm p-6 bg-white border border-gray-10 rounded-lg shadow hover:shadow-lg transition-shadow duration-300 white:bg-gray-800 dark:border-gray-200">
      <%= render text %>
      <div class="mt-4 space-x-2">
        <%= link_to 'See translations', text_translations_path(text), class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-950 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 white:bg-gray-500 dark:text-gray-950 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" %>
        <% if Current.user.admin? %>
          <%= link_to 'Edit', [:edit, text], class: "inline-flex items-center px-4 py-2 text-sm font-medium text-blue-700 bg-white border border-blue-700 rounded-lg hover:bg-blue-700 hover:text-white focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-white dark:bg-white-800 dark:text-blue-800 dark:border-blue-600 dark:hover:text-white dark:hover:bg-blue-700" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-10">
  <%= link_to "New text", new_text_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-700 rounded-lg hover:bg-green-800 focus:ring-4 focus:ring-blue-300 dark:bg-green-600 dark:hover:bg-green-700 focus:outline-none dark:focus:ring-blue-800" %>
</div>


