<p style="color: green"><%= notice %></p>

<% content_for :title, "Texts" %>

<h1>Texts</h1>

<div id="texts">
  <% @texts.each do |text| %>
    <%= render text %>
    <p>
      <%= link_to "Show this text", text %>
    </p>
    <p>
      <%= link_to 'See translations', text_translations_path(text) %>
    </p>
  <% end %>
</div>

<%= link_to "New text", new_text_path %>
