<div class="flex justify-center items-center px-4 py-12 min-h-screen bg-gray-50 sm:px-6 lg:px-8">
  <div class="p-8 space-y-8 w-full bg-white rounded-lg shadow-md">
    <%= form_with(model: text, class: "space-y-6") do |form| %>
    <% if text.errors.any? %>
    <div class="p-4 mb-6 bg-red-50 border-l-4 border-red-400">
      <h2 class="text-lg font-medium text-red-700">
        <%= pluralize(text.errors.count, "error") %> prohibited this text from being saved:
      </h2>
      <ul class="pl-5 mt-2 list-disc">
        <% text.errors.each do |error| %>
        <li class="text-red-600"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div>
      <%= form.label :title_tibetan, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title_tibetan, 
            class: "w-full px-3 py-2 text-tibetan border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.label :title_wylie, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title_wylie, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.label :title_phonetics, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title_phonetics, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.label :notes, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :notes, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.label :tag_ids, "Tags", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.collection_select :tag_ids, 
                                Tag.order(:name), 
                                :id, 
                                :name, 
                                { }, 
                                { multiple: true, 
                                class: 'tomselect w-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' } %>
    </div>

    <div>
      <%= form.label :school_ids, "Schools", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.collection_select :school_ids, 
                                School.order(:name), 
                                :id, 
                                :name, 
                                { }, 
                                { multiple: true, 
                                class: 'tomselect w-full px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' } %>
    </div>

    <div>
      <%= form.label :deity_ids, "Deities", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.collection_select :deity_ids, 
                                Deity.order(:name_english), 
                                :id, 
                                :name_english, 
                                { }, 
                                { multiple: true, 
                                class: 'tomselect w-full px-3 py-2  focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' } %>
    </div>

    <div>
      <%= form.label :author_ids, "Authors", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.collection_select :author_ids, 
                                Author.order(:name_english), 
                                :id, 
                                :name_english, 
                                { }, 
                                { multiple: true, 
                                class: 'tomselect w-full px-3 py-2  focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' } %>
    </div>

    <div class="pt-4">
      <%= form.submit class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
    <% end %>
  </div>
</div>

<script type="module">
  import TibetanUnicodeConverter from "tibetan-unicode-converter";

  // When pasting text in #text_title_tibetan that doesn't contain tibetan characters
  // then convert it automatically to unicode
  document.addEventListener("DOMContentLoaded", function() {
    const input = document.getElementById("text_title_tibetan");
    input.addEventListener("paste", function(event) {
      event.preventDefault();
      const pastedText = event.clipboardData.getData("text");
      if (pastedText.match(/^[^\u{f00}-\u{fda}\u{f021}-\u{f042}\u{f162}-\u{f588}]*$/u)) {
        const converter = new TibetanUnicodeConverter(pastedText);
        input.value = converter.convert();
      } else {
        input.value = pastedText;
      }
    });
  });
</script>