<!-- filepath: app/views/texts/_text.html.erb -->
<div id="<%= dom_id text %>" class="text-card shine-effect rounded-2xl shadow-md overflow-hidden flex flex-col h-full cursor-pointer group min-h-[400px]">
  
  

  <!-- Image de couverture avec effet -->
  <div class="text-cover-container bg-gradient-to-br from-gray-50 to-gray-100 flex-shrink-0">
    <div class="w-full aspect-[210/297] relative">
      <%= display_text_cover(text, class: "w-full h-full object-contain") %>
    </div>
  </div>
  
  <!-- Contenu de la carte -->
  <div class="text-content p-6 flex-grow flex flex-col">
    
    <!-- Titres avec hiérarchie moderne -->
    <div class="mb-4 space-y-2">
      <% if text.preferred_version_title.present? %>
        <h3 class="text-title text-lg font-semibold text-gray-900 leading-tight">
          <%= text.preferred_version_title %>
        </h3>
      <% end %>
      
      <% if text.title_tibetan.present? %>
        <h2 class="text-title text-base font-medium text-tibetan text-gray-800 truncate">
          <%= text.title_tibetan %>
        </h2>
      <% end %>
      
      <% if text.title_wylie.present? %>
        <p class="text-sm text-gray-600 font-mono bg-gray-50 px-2 py-1 rounded inline-block">
          <%= text.title_wylie %>
        </p>
      <% end %>
    </div>

    <!-- Tags et métadonnées -->
    <div class="mt-auto">
      <div class="flex flex-wrap gap-1 mb-3">
        <!-- Schools -->
        <% if text.respond_to?(:schools) && text.schools.any? %>
          <% text.schools.limit(2).each do |school| %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-700 hover:scale-105 transition-transform">
              <%= school.name %>
            </span>
          <% end %>
          <% if text.schools.count > 2 %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
              +<%= text.schools.count - 2 %>
            </span>
          <% end %>
        <% end %>

        <!-- Deities -->
        <% if text.respond_to?(:deities) && text.deities.any? %>
          <% text.deities.limit(1).each do |deity| %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-700 hover:scale-105 transition-transform">
              <%= deity.name_tibetan.present? ? deity.name_tibetan : deity.name_english %>
            </span>
          <% end %>
          <% if text.deities.count > 1 %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
              +<%= text.deities.count - 1 %>
            </span>
          <% end %>
        <% end %>
      </div>

      <!-- Footer avec flèche d'indication -->
      <div class="flex items-center justify-between pt-3 border-t border-gray-100">
        <div class="text-metadata text-xs text-gray-500">
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
          </svg>
          Voir traductions
        </div>
        
        <!-- Flèche d'indication -->
        <div class="text-gray-400 group-hover:text-blue-500 transition-colors duration-300">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>