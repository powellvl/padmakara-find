<div class="results-section">
  <h3 class="results-section-title">
    <span class="mr-2">Texts</span>
    <span class="results-count results-count--texts"><%= @texts.count %></span>
  </h3>
  <div class="results-grid">
    <% @texts.each do |text| %>
      <div class="result-card result-card--text">
        <div class="result-card-content">
          <h5 class="result-card-title"><%= text.title_tibetan %></h5>
          <p class="result-card-description"><%= truncate(text.title_phonetics, length: 100) %></p>
          <div class="result-card-actions">
            <%= link_to text_path(text), class: "result-card-button result-card-button--texts" do %>
              See
              <svg xmlns="http://www.w3.org/2000/svg" class="result-card-icon" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
