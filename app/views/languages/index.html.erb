<% content_for :title, "Languages" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Languages</h1>
    <%= link_to "New language", new_language_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="languages" class="min-w-full">
    <% if @languages.any? %>
      <% @languages.each do |language| %>
        <%= render language %>
        <div class="flex gap-2 mb-4">
          <%= link_to "Show this language", language, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
          <%= button_to "Delete", language_path(language), 
              method: :delete, 
              class: "rounded-md px-3.5 py-2.5 bg-red-600 hover:bg-red-700 text-white font-medium",
              data: { turbo_confirm: "Are you sure you want to delete this language?" } %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No languages found.</p>
    <% end %>
  </div>
</div>
